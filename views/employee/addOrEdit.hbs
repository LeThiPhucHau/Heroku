<h3 style="text-align: center;">{{viewTitle}}</h3 >
<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group" style="font-family: 'Times New Roman', Times, serif;">
        <label>Họ và tên</label>
        <input type="text" class="form-control" name="fullName" value="{{employee.fullName}}" placeholder="Họ và tên">
        <div class="text-danger">
            {{employee.fullNameError}}
        </div>
    </div>
    <div class="form-group" style="font-family: 'Times New Roman', Times, serif;">
        <label>Email</label>
        <input type="email" class="form-control" name="email" value="{{employee.email}}" placeholder="Nhập Email">
        <div class="text-danger">
            {{employee.emailError}}
        </div>
    </div>
    <div class="form-row" >
        <div class="form-group md-6" style="font-family: 'Times New Roman', Times, serif;">
            <label>Số điện thoại</label>
            <input type="text" name="mobile" placeholder="Số điện thoại" value="{{employee.mobile}}" class="form-control">

        </div>
        <div class="form-group md-6" style="font-family: 'Times New Roman', Times, serif;">
            <label>Thành phố</label>
            <input type="text" name="city" placeholder="Nhập thành phố" value="{{employee.city}}" class="form-control">
        </div>
    </div>

    <div class="form-group" style="font-family: 'Times New Roman', Times, serif;">
        <button type="submit" class="btn btn-info" style="margin-right: 50px;"><i class="fa fa-database"></i>Gửi đi</button>
        <a href="/employee/list" class="btn btn-danger" style="margin-left: 400px;">
            <i class="fa fa-list-alt"></i>Xem tất cả
        </a>
    </div>
</form>